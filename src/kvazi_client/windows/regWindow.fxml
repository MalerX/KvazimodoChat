<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx"
          fx:controller="kvazi_client.windows.RegController" xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">
    <TextField fx:id="loginField" promptText="Введите login" GridPane.columnIndex="0" GridPane.rowIndex="0" minWidth="250"/>
    <TextField fx:id="nick" promptText="Введите никнейм" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <PasswordField fx:id="passwordField" promptText="Введите пароль" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordConfirmField" promptText="Подтвердите пароль" GridPane.columnIndex="0"
                   GridPane.rowIndex="3"/>
    <AnchorPane GridPane.rowIndex="4" GridPane.columnIndex="0">
    <Button fx:id="register" text="Ok" onAction="#registration" AnchorPane.rightAnchor="10"/>
    <Button fx:id="backToTheFW" text="Назад" onAction="#backToTheFW" AnchorPane.leftAnchor="10"/>
    </AnchorPane>
</GridPane>
